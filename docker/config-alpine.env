# Configuration for Alpine musl build servers
# Source this file before running update-alpine.sh

# Container configuration
export INSTANCE_COUNT=2
export CONTAINER_PREFIX="builder-alpine-"
export QUEUE_TAGS="queue=alpine"

# Memory limits (musl builds are typically lighter than glibc builds)
export MEMORY_RESERVATION="4g"
export MEMORY_LIMIT="16g"

# Required: Set your Buildkite agent token
# export BUILDKITE_AGENT_TOKEN="your-token-here"
